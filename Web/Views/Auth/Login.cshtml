@model LoginViewModel;

<h4 class="bold text-center my-3">Вход в систему</h4>
<div class="row justify-content-center">
    <div class="col-12 col-lg-6">

        <form asp-antiforgery="true" asp-action="Login" asp-controller="Auth" method="post">
            <div class="form-group">
                <input class="form-control" asp-for="Email" placeholder="Почта">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" placeholder="Пароль">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <button class="btn btn-success float-right" type="submit">Войти</button>
        </form>

    </div>
</div>